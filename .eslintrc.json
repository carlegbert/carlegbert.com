{
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "plugins": [
    "babel"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
  },

  "overrides": [
    {
      "files": ["**/*.spec.js"],
      "rules": {
        "prefer-arrow-callback": false,
        "func-names": false
      },
      "env": { "mocha": true }
    }
  ]
}
